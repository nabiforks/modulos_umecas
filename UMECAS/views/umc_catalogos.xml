<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for "${2/(.)/\1/g}" -->
    <record id="view_umc_delitos_tree" model="ir.ui.view">
        <field name="name">view.umc_delitos.tree</field>
        <field name="model">umc_delitos</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree >
                <field name="x_name" />
            </tree>
        </field>
    </record>
    <!-- Form view for "${2/(.)/\1/g}" -->
    <record id="view_umc_delitos_form" model="ir.ui.view">
        <field name="name">view.umc_delitos.form</field>
        <field name="model">umc_delitos</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Delitos" create="1" delete="1" edit="1">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <label for="x_name" class="oe_edit_only" />
                        <h1>
                            <field name="x_name" class="oe_inline" placeholder="Delito" />
                        </h1>
                    </div>
                    <group></group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view for "${2/(.)/\1/g}" -->
    <record id="view_umc_delitos_search" model="ir.ui.view">
        <field name="name">view.umc_delitos.search</field>
        <field name="model">umc_delitos</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="umc_delitos_search">
                <field name="x_name" />
            </search>
        </field>
    </record>
    <!-- Main window action for "${2/(.)/\1/g}" -->
    <record id="action_umc_delitos_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Delitos</field>
        <field name="res_model">umc_delitos</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--field name="target">current</field>
        <field name="domain">${4/(.)/\1/g}</field>
        <field name="context">${5/(.)/\1/g}</field>
        <field name="search_view_id" ref="view_${2/\./\_/g}_search" /-->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">                Click para agregar registros           </p>
            <p>         Delitos                  </p>
        </field>
    </record>
    <!-- Main menu for "${2/(.)/\1/g}" -->
    <menuitem id="umc_configuracion" name="ConfiguraciÃ³n" parent="main_umc_menu" />
    <menuitem id="umc_catalogos" name="Catalogos" parent="umc_configuracion" />
    <menuitem id="umc_delitos" name="Delitos" parent="umc_catalogos" action="action_umc_delitos_window"/>
</odoo>