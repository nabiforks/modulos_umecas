<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="umc_sustancias_consume_form_view">
        <field name="name">sustancias_consume.form.view</field>
        <field name="model">umc_sustancias_consume</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="x_name" />
                            <field name="x_frecuencia" />
                            <field name="x_cantidad" />
                            <field name="x_ultimo_consumo" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="umc_sustancias_consume_tree_view">
        <field name="name">sustancias_consume.tree.view</field>
        <field name="model">umc_sustancias_consume</field>
        <field name="arch" type="xml">
            <tree>
                <field name="x_name" />
                <field name="x_frecuencia" />
                <field name="x_cantidad" />
                <field name="x_ultimo_consumo" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="umc_sustancias_consume_list_action">
        <field name="name">Consumo de sustancias</field>
        <field name="res_model">umc_sustancias_consume</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Agregar primer registro                </p>
        </field>
    </record>
    
</odoo>