<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--  session form view /////////////////////////////////////////////////////-->
    <record model="ir.ui.view" id="umc_eval_form_view">
        <field name="name">evaluacion_de_riesgos.form.view</field>
        <field name="model">umc_evaluacion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="asignar_borrador" type="object" string="Solicitud" states="entrevista"/>
                    <button name="asignar_evaluador" type="object" string="Asignar evaluador" class="oe_highlight" states="solicitud"/>
                    <button name="terminar_entrevista" type="object" string="Entrevista realizada" class="oe_highlight" states="entrevista"/>
                    <button name="terminar_analisis" type="object" string="Analisis realizado" class="oe_highlight" states="analisis"/>
                    <button name="imprimir_reporte" type="object" string="Imprimir reporte" class="oe_highlight" states="hecho"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="x_name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="x_tipo_entrevista" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="x_expediente_id" />
                            <field name="x_evaluador_id" attrs="{'readonly': [('state','not in',('solicitud'))]}" options="{'no_create': True, 'no_open': True}" />
                        </group>
                    </group>
                    <group class="row">
                        <notebook>
                            <page string="Entrevista" attrs="{'invisible': [('state','in',('solicitud'))]}">
                                <field name="x_entrevistas_ids" context="{'default_x_evaluacion_id': active_id,'default_x_evaluador_id': x_evaluador_id }" />
                            </page>
                            <page string="Analisis de riesgos" attrs="{'invisible': [('state','in',('solicitud','entrevista'))]}">
                                <!--group-->
                                <group class="row">
                                    <group>
                                        <field name="x_fecha_analisis" />
                                    </group>
                                    <group>
                                        <field name="x_ponderacion" readonly="1"/>
                                        <field name="x_escala_riesgos" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="x_telefono" widget="radio" />
                                    <field name="x_arraigo_region" widget="radio" />
                                    <field name="x_arraigo_residencia" widget="radio" />
                                    <field name="x_relaciones_familiares" widget="radio" />
                                    <field name="x_dependientes_economicos" widget="radio" options="{'horizontal': true}" />
                                </group>
                                <!--/group-->
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--  tree view /////////////////////////////////////////////////////-->
    <record model="ir.ui.view" id="umc_evaluacion_tree_view">
        <field name="name">evaluacion.tree.view</field>
        <field name="model">umc_evaluacion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="x_name" />
                <field name="partner_id" />
                <field name="x_tipo_entrevista" />
                <field name="x_evaluador_id" />
                <field name="x_expediente_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <!--Agregar filtros de busqueda -->
    <record model="ir.ui.view" id="evaluaciones_umc_search_view">
        <field name="name">evaluaciones_umc.search.view</field>
        <field name="model">umc_evaluacion</field>
        <field name="arch" type="xml">
            <search>
                <field name="x_expediente_id" />
                <field name="partner_id" />
                <field name="x_tipo_entrevista" />
                <field name="state" />
            </search>
        </field>
    </record>
    <!-- window action ///////////////////////////////////////////////////////////////////////////////-->
    <record model="ir.actions.act_window" id="umc_evaluacion_list_action">
        <field name="name">Evaluaci√≥n</field>
        <field name="res_model">umc_evaluacion</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <!--field name="context" eval="{'search_default_customer': 1}"/-->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Agregar primer registro                </p>
        </field>
    </record>
    <menuitem id="evaluaciones_menu" name="Evaluaciones" parent="main_umc_menu" action="umc_evaluacion_list_action"/>
</odoo>